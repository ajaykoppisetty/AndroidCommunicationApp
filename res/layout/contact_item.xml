<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <!-- android:orientation="vertical" -->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <CheckBox
            android:id="@+id/selectContect"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:contentDescription="@string/contactName"
            android:text="@string/selectContact"
            android:textColor="@color/purpleElderberry" />

        <!--
         <TextView
        android:id="@+id/contectName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:contentDescription="@string/contactName"
        android:text="@string/contactName"
        android:textSize="16sp" />
        -->

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/background_light" >

        <TextView
            android:id="@+id/contactType"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="37dp"
            android:text="@string/phoneType"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textColor="@color/tilledSoil" />

        <TextView
            android:id="@+id/contactNumer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginBottom="5dip"
            android:contentDescription="@string/contactName"
            android:gravity="right"
            android:paddingRight="5dp"
            android:text="@string/phoneNo"
            android:textAlignment="6"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textColor="@color/tilledSoil" />
    </LinearLayout>

</LinearLayout>